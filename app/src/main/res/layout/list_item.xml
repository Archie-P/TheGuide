<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/image"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:textStyle="bold"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/name_text_view"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/description_text_view"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/basic_information_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/address_text_view"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/additional_information_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/basic_information_text_view"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:padding="8dp"
            />

    </RelativeLayout>
</RelativeLayout>